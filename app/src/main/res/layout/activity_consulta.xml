<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:weightSum="1"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblPesquisar"
        android:id="@+id/lblPesquisar"
        android:textStyle="bold"
        android:textSize="36sp"
        android:padding="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <android.inputmethodservice.ExtractEditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:text="@string/lblNomeEscola"
            android:id="@+id/extractEditText"
            android:gravity="fill_horizontal|left"
            android:enabled="true"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:clickable="true"
            android:layout_weight="0.82" />

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:clickable="true"
            android:gravity="clip_horizontal|fill_vertical|right" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Filtros"
            android:id="@+id/textView2"
            android:layout_margin="8dp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"></GridLayout>


</LinearLayout>